# $Id: makefile.in,v 5.12 1995/03/18 15:27:08 tom Exp $
# Makefile-template for 'conflict'

THIS = conflict
SYSTEM = unix

#### Start of system configuration section. ####

srcdir = @srcdir@
VPATH  = @srcdir@

CC		= @CC@
LINK		= $(CC)
LINT		= @LINT@
INSTALL		= @INSTALL@
INSTALL_PROGRAM	= @INSTALL_PROGRAM@
INSTALL_DATA	= @INSTALL_DATA@

LIBS		= @LIBS@
CFLAGS		= @CFLAGS@
LDFLAGS		= @LDFLAGS@

prefix		= @prefix@
exec_prefix	= @exec_prefix@

bindir		= $(exec_prefix)/bin
mandir		= $(prefix)/man/man1
manext		= 1

#### End of system configuration section. ####

SHELL		= /bin/sh

CPPFLAGS	= -I. -I$(srcdir) -DHAVE_CONFIG_H

.c.o:
	$(CC) -c $(CPPFLAGS) $(CFLAGS) $<

SRC =	patchlev.h \
	CHANGES COPYING README \
	$(THIS).lsm $(THIS).c $(THIS).h $(THIS).1 \
	txtalloc.c unix.c msdos.c os2.c \
	config_h.in install.sh mkdirs.sh makefile.in configure.in \
	run_test.sh

OBJ = $(THIS).o $(SYSTEM).o txtalloc.o

DISTFILES = MANIFEST configure $(SRC)

all:	$(THIS)

$(THIS): $(OBJ)
	-mv $(THIS) o$(THIS)
	$(LINK) $(CFLAGS) $(LDFLAGS) -o $(THIS) $(OBJ) $(LIBS)

$(OBJ) : conflict.h

install: all installdirs
	$(INSTALL_PROGRAM) $(THIS) $(bindir)/$(THIS)
	$(INSTALL_DATA) $(srcdir)/$(THIS).1 $(mandir)/$(THIS).$(manext)

installdirs:
	$(SHELL) ${srcdir}/mkdirs.sh $(bindir) $(mandir)

uninstall:
	rm -f $(bindir)/$(THIS) $(mandir)/$(THIS).$(manext)

makefile: makefile.in config.status
	./config.status

config.h: configure
	./configure

config.status: configure
	./config.status --recheck

mostlyclean:
	rm -f *.o o$(THIS) core *~ *.BAK

clean: mostlyclean
	rm -f $(THIS)

distclean: clean
	rm -f makefile config.log config.cache config.status config.h

realclean: distclean
	rm -f tags TAGS # don't remove configure!

lint:
	$(LINT) $(LINTOPTS) -DNO_IDENT $(CPPFLAGS) $(THIS).c $(SYSTEM).c txtalloc.c

tags:
	ctags $(THIS).c $(HDRS)

TAGS:
	etags $(THIS).c $(HDRS)

dist:	makefile $(DISTFILES)
	echo $(THIS)-`sed \
		-e '/"$$[A-Za-z]*: .*$(THIS)\.c.*$$"/!d' \
		-e 's/^.*$(THIS)[^ ]*[ ]*//' \
		-e 's/[ ].*$$//' \
		-e q $(srcdir)/$(THIS).c` > .fname
	rm -rf `cat .fname`
	mkdir `cat .fname`
	for file in $(DISTFILES); do \
	  ln $(srcdir)/$$file `cat .fname` \
	    || { echo copying $$file instead; cp -p $$file `cat .fname`; }; \
	done
	tar -cf - `cat .fname` | gzip >`cat .fname`.tgz
	rm -rf `cat .fname` .fname

shar:	$(DISTFILES)
	shar -a -m -M -L50 -n$(THIS) -oPart $(DISTFILES)

$(THIS).o:	config.h

check: $(THIS)
	sh ./run_test.sh	
