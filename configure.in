dnl Process this file with 'autoconf' to produce a 'configure' script
dnl $Id: configure.in,v 6.6 2011/02/27 17:02:22 tom Exp $
AC_REVISION($Revision: 6.6 $)
AC_PREREQ(2.13.20020210)
AC_INIT(conflict.c)
AC_CONFIG_HEADER(config.h:config_h.in)

CF_CHECK_CACHE

case $host_os in
*os2*)
	SYSTEM=msdos
	;;
*)
	SYSTEM=unix
	;;
esac
AC_SUBST(SYSTEM)

AC_PROG_CC
AC_PROG_INSTALL
AC_C_CONST
AC_CONST

CF_ANSI_CC_REQD
CF_PROG_EXT

CF_DISABLE_ECHO
CF_MAKE_TAGS
CF_PROG_LINT

AC_HEADER_STDC
AC_CHECK_HEADERS(stdlib.h unistd.h)
AC_CHECK_HEADERS(getopt.h string.h malloc.h sys/param.h)
AC_HEADER_DIRENT

CF_XOPEN_SOURCE

AC_TYPE_SIZE_T
AC_CHECK_TYPE(ino_t, unsigned)
AC_CHECK_TYPE(dev_t, unsigned)

AC_CHECK_FUNCS(getcwd getopt link symlink realpath strcasecmp strrchr strdup)

CF_ENABLE_WARNINGS

CF_DISABLE_LEAKS

AC_OUTPUT(makefile,,,cat)
